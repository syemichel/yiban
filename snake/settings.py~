        self.body_height = 30
        self.body_color = (255,0,0)
        self.egg_width = 30
        self.egg_height = 30
        self.egg_color = (0,100,255)
        self.text_color = (0,0,0)
        self.button_color = (0,255,0)
        self.button_text_size = 50
        self.button_width = 200
        self.button_height = 55
